<Page x:Class="Automata.ControlModule.ResultControlPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Automata.ControlModule"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResultControlPage">

    <Grid Background="White">
        <StackPanel>
            <Label Content="Контроль заврешен"/>
            <Label Content="Результаты контроля"/>
            <Label Content="{Binding Path=TaskResultText}"/>
            <Label Content="{Binding Path=TimeResultText}"/>
            <Label Content="{Binding Path=SolvedTasksText}"/>
            <Button Content="Попробовать еще раз" Name="buttonRestart" Click="buttonRestart_Click" />
        </StackPanel>

    </Grid>
</Page>
