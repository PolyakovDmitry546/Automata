<Window x:Class="Automata.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Automata"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Name="errorTextBlock" Margin="0 50 0 5"/>
            <Label Content="Логин" HorizontalAlignment="Center" Margin="0 15 0 5"/>
            <TextBox Name="loginTextBox" Width="240"/>
            <Label Content="Пароль" HorizontalAlignment="Center" Margin="0 15 0 5"/>
            <TextBox Name="passwordTextBox" Width="240"/>
            <Button Name="battonLogin" Content="Войти" Width="120" Margin="0 15 0 0"
                    Click="battonLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
